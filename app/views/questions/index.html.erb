<head>
  <%= stylesheet_link_tag 'questions/index'%>
</head>
<%= render "layouts/header" %>

<section id ='main-content'>
  <section class = 'wrapper'>

    <div class="row">
      <div class="col-lg-12">
        <h3 class="page-header"><i class="fa fa-file-text-o"></i> Questions asked by you</h3>
        <ol class="breadcrumb">
          <li><i class="fa fa-home"></i><%= link_to "Home", users_path, method: :get %>></li>
          <li><i class="fa fa-file-text-o"></i>Questions</li>
        </ol>
      </div>
    </div>
    <div class = "col-md-10">
<% @questions.each do |question| %>
        <article class = "question question-type-normal">
          <h2><%= question.title.html_safe %></h2>
          <a class="question-report" href = "#"><i class = "fa fa-ban"></i>  Report</a>
          <div class = "question-type-main"><i class = "fa fa-question-circle"></i>  Question</div>
          <div class = "question-author">
            <a href = "#" original-title = "name" class="question-author-img tooltip-n">
              <span></span>
              <%= image_tag current_user.profile_picture.url(:author) %>
            </a>
          </div>
          <div class = "question-inner">
            <div class = "clearfix"></div>
            <div class = "question-desc"><%= question.content.html_safe %></div>
            <div class="question-details">
              <span class="question-answered question-answered-done"><i class="fa fa-check"></i>solved</span>
              <span class="question-upvotes"><i class="fa fa-star"></i>5</span>
            </div>
            <span class="question-date"><i class="fa fa-clock-o"></i>4  mins  ago</span>
            <span class="question-comment"><a href="#"><i class="fa fa-comments"></i>5  Answers</a></span>
            <span class="question-view"><i class="fa fa-user-plus"></i>70   views</span>
            <div class="clearfix"></div>
          </div>
        </article>

<% end %>
    </div>

      </section>
    </section>