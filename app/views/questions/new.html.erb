<%= render "layouts/header" %>

<section id ='main-content'>
  <section class = 'wrapper'>
    <div class="row">
      <div class="col-lg-12 col-xs-offset-1">
        <h3 class="page-header"><i class="fa fa-file-text-o"></i> Ask your Question</h3>
        <ol class="breadcrumb">
          <li><i class="fa fa-home"></i><%= link_to "Home", users_path, method: :get %>></li>
          <li><i class="fa fa-file-text-o"></i>Ask question</li>
        </ol>
      </div>
    </div>

    <div class = "row">
      <div class = "col-lg-10">
      <%= form_for @question do |f| %>
          <div>
            <%= f.label :title %>
          </div>
          <div>
            <%= f.text_field :title , :class => 'form-control'%>
          </div>
          <div>
            <%= f.label :content %>
          </div>
          <div>
            <%= f.cktext_area :content, rows: 10 %>
          </div>
          <div>
            <%= f.submit %>
          </div>
      <% end %>
        </div>
    </div>
  </section>
</section>